<?xml version="1.0" ?>

<!-- symmetry.xml
Infinite symmetry plane.
This preset is designed to be loaded after cfd.xml.

To use it, just include this file, and later set the values for the variables:
symmetry_r = Position of the symmetry plane
symmetry_n = Normal of the symmetry plane (It should be normalized)

In order to add several symmetry planes, just include this file setting a
prefix, for instance:
<Include file="symmetry.xml" prefix="left_"/>
<Include file="symmetry.xml" prefix="right_"/>
<Tools>
    <Tool action="insert" before="left_symmetry mirror" type="set_scalar" name="left_symmetry_r" in="symmetry_r" value="-1.0, 0.0, 0.0, 0.0"/>
    <Tool action="insert" before="left_symmetry mirror" type="set_scalar" name="left_symmetry_n" in="symmetry_n" value="-1.0, 0.0, 0.0, 0.0"/>
    <Tool action="insert" before="right_symmetry mirror" type="set_scalar" name="right_symmetry_r" in="symmetry_r" value="1.0, 0.0, 0.0, 0.0"/>
    <Tool action="insert" before="right_symmetry mirror" type="set_scalar" name="right_symmetry_n" in="symmetry_n" value="1.0, 0.0, 0.0, 0.0"/>
</Tools>
-->

<sphInput>
    <Variables>
        <!-- position and normal of the symmetry plane -->
        <Variable name="symmetry_r" type="vec" value="0.0, 0.0, 0.0, 0.0" />
        <Variable name="symmetry_n" type="vec" value="1.0, 0.0, 0.0, 0.0" />
        <!-- flag to identify the particles to be symmetrized -->
        <Variable name="imirrored" type="int*" length="N" />
        <!-- Symmetrized properties of the particles -->
        <Variable name="rmirrored" type="vec*" length="N" />
        <Variable name="umirrored" type="vec*" length="N" />
        <Variable name="nmirrored" type="vec*" length="N" />
    </Variables>

    <Tools>
        <!-- We must start mirroring particles (and marking them). -->
        <Tool name="cfd symmetry mirror" action="insert" before="Interactions" type="kernel" path="@RESOURCES_OUTPUT_DIR@/Scripts/cfd/Boundary/Symmetry/Mirror.cl"/>
        <!-- Now we can compute the interactions -->
        <Tool name="cfd symmetry interactions" action="insert" before="Interactions" type="kernel" path="@RESOURCES_OUTPUT_DIR@/Scripts/cfd/Boundary/Symmetry/Interactions.cl"/>
        <Tool name="cfd symmetry BI" ifdef="__CFD_BI__" action="insert" before="Interactions" type="kernel" path="@RESOURCES_OUTPUT_DIR@/Scripts/cfd/Boundary/Symmetry/BoundaryIntegrals.cl"/>
    </Tools>
</sphInput>
