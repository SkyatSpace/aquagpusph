        <Variable name="dt_var" type="float*" length="N" />
        <Variable name="dt_min" type="float" value="0.0" />
    </Variables>

    <Tools>
        <Tool action="insert" before="TimeStep" type="kernel" name="cfd variable time step" path="@RESOURCES_OUTPUT_DIR@/Scripts/cfd/TimeStep.cl"/>
